@media(min-width:701px)
  .masthead
    &.segment
      min-height 100%
    h1.ui.header
      margin-top 1em

@media(min-width:1025px)
  .masthead
    h1.ui.header
      margin-top 2em

@media(min-width:1680px)
  .masthead
    h1.ui.header
      margin-top 4em
